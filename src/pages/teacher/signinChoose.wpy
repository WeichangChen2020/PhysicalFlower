<script>
import wepy from 'wepy'

// 通过继承自wepy.page的类创建页面逻辑
export default class signinChoose extends wepy.page {
  config = {
    window: {
      backgroundTextStyle: 'light',
      navigationBarBackgroundColor: '#fff',
      navigationBarTitleText: '管理签到',
      navigationBarTextStyle: 'black'
    }
  };
  // 可用于页面模板绑定的数据
  data = {
    list: [
      {
        id: '1',
        name: 'XXXXX班级',
        open: false,
        pages: ['XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到'],
        url: ['./siginControl', './siginControl', './siginControl', './siginControl', './siginControl']
      },
      {
        id: '2',
        name: 'XXXXX班级',
        open: false,
        pages: ['XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到'],
        url: ['./siginControl', './siginControl', './siginControl', './siginControl', './siginControl']
      },
      {
        id: '3',
        name: 'XXXXX班级',
        open: false,
        pages: ['XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到'],
        url: ['./siginControl', './siginControl', './siginControl', './siginControl', './siginControl']
      },
      {
        id: '4',
        name: 'XXXXX班级',
        open: false,
        pages: ['XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到'],
        url: ['./siginControl', './siginControl', './siginControl', './siginControl', './siginControl']
      },
      {
        id: '5',
        name: 'XXXXX班级',
        open: false,
        pages: ['XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到', 'XXX月XXX号签到'],
        url: ['./siginControl', './siginControl', './siginControl', './siginControl', './siginControl']
      }
    ]
  };

  // 事件处理函数(集中保存在methods对象中)
  methods = {
    kindToggle(e) {
      var id = e.currentTarget.id
      var list = this.data.list
      for (var i = 0, len = list.length; i < len; ++i) {
        if (list[i].id === id) {
          list[i].open = !list[i].open
        } else {
          list[i].open = false
        }
      }
      this.setData({
        list: list
      })
    }
  };

  // 页面的生命周期函数
  onLoad() {
  }
}
</script>
